<?xml version="1.0" encoding="utf-8"?>



<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_profile_ui"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.mohseenmukaddam.levelup.ProfileUIActivity">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:id="@+id/ProfileLinearLayout">

                    <RelativeLayout
                        android:id="@+id/ProfileInfo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/layout_roundedcorner"
                        android:backgroundTint="#d0d0d0"
                        android:layout_marginBottom="5dp">
<!--
                        <com.makeramen.roundedimageview.RoundedImageView
                            xmlns:app="http://schemas.android.com/apk/res-auto"
                            android:id="@+id/profilePic"
                            android:layout_width="@dimen/com_facebook_profilepictureview_preset_size_normal"
                            android:layout_height="@dimen/com_facebook_profilepictureview_preset_size_normal"
                            android:src="@drawable/android_logo"
                            android:scaleType="fitCenter"
                            app:riv_corner_radius="30dip"
                            app:riv_border_width="2dip"
                            app:riv_border_color="#333333"
                            app:riv_mutate_background="true"
                            app:riv_tile_mode="repeat"
                            app:riv_oval="true"
                            android:layout_marginLeft="10dp"
                            android:layout_alignBottom="@+id/level"
                            android:layout_alignTop="@+id/healthTextView" />
                            -->

                        <!--
                        <TextView
                            android:id="@+id/healthTextView"
                            android:text="Health"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@id/profilePic"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="7dp" />
                            -->
                        <!-- Below code from -> https://android-arsenal.com/details/1/2897 -->
                        <com.mikhaellopez.circularfillableloaders.CircularFillableLoaders
                            android:id="@+id/circularFillableLoaders"
                            android:layout_width="100dp"
                            android:layout_height="120dp"
                            android:src="@drawable/ic_logo1"
                            app:cfl_border="true"
                            app:cfl_border_width="7dp"
                            app:cfl_progress="80"
                            app:cfl_wave_amplitude="0.06"
                            app:cfl_wave_color="#3f51b5"
                            android:layout_centerVertical="true"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_marginLeft="10dp"
                            android:layout_marginStart="10dp" />

                        <TextView
                            android:id="@+id/healthTextView"
                            android:text="Health"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@id/circularFillableLoaders"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="7dp" />

                        <ProgressBar
                            style="?android:attr/progressBarStyleHorizontal"
                            android:id="@+id/health"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@id/circularFillableLoaders"
                            android:background="#191970"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginBottom="15dp"
                            android:layout_below="@id/healthTextView"/>

                        <TextView
                            android:text="Experience"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/experienceTextView"
                            android:layout_toRightOf="@id/circularFillableLoaders"
                            android:layout_below="@id/health"
                            android:layout_marginLeft="10dp"/>

                        <ProgressBar
                            style="?android:attr/progressBarStyleHorizontal"
                            android:id="@+id/experience"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignLeft="@id/health"
                            android:layout_alignRight="@id/health"
                            android:background="#191970"
                            android:layout_toRightOf="@+id/circularFillableLoaders"
                            android:layout_marginBottom="15dp"
                            android:layout_below="@id/experienceTextView"/>

                        <TextView
                            android:text="Level"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/levelTextView"
                            android:layout_toRightOf="@id/circularFillableLoaders"
                            android:layout_below="@id/experience"
                            android:layout_marginLeft="10dp"/>

                        <ProgressBar
                            style="?android:attr/progressBarStyleHorizontal"
                            android:id="@+id/level"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/levelTextView"
                            android:layout_alignLeft="@id/health"
                            android:layout_alignRight="@id/health"
                            android:background="#191970"
                            android:layout_marginBottom="7dp" />



                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/ProfileDetails"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/ProfileInfo"
                        android:background="@drawable/layout_roundedcorner"
                        android:padding="10dp">

                        <!-- New Pie Graph Layout by HShukla :) -->

                        <!--<com.github.mikephil.charting.charts.PieChart-->
                            <!--android:id="@+id/PieChart"-->
                            <!--android:layout_width="wrap_content"-->
                            <!--android:layout_height="wrap_content"-->
                            <!--android:layout_marginTop="8dp"-->
                            <!--android:layout_marginBottom="10dp" />-->

                        <com.dzaitsev.android.widget.RadarChartView
                            android:id="@+id/radar_chart"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="#fff"
                            android:padding="30dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="10dp"
                            app:axisColor="#22737b"
                            app:axisMax="280"
                            app:axisTick="75"
                            app:axisWidth="1dp"
                            app:chartColor="#C8FF4030"
                            app:chartStyle="stroke"
                            app:chartWidth="3dp"
                            app:circlesOnly="false"
                            app:endColor="#c3e3e5"
                            app:startColor="#5f9ca1"
                            app:textSize="12sp" />

                        <ListView
                            android:id="@+id/ListView1"
                            android:background="@drawable/layout_roundedcorner"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@id/radar_chart"
                            android:layout_alignTop="@id/radar_chart"
                            android:layout_alignBottom="@id/radar_chart"
                            android:paddingTop="0dp"
                            android:paddingLeft="0dp"
                            android:padding="0dp" />

                        <ListView
                            android:id="@+id/ListView2"
                            android:background="@drawable/layout_roundedcorner"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_below="@id/radar_chart"
                            android:layout_alignLeft="@id/radar_chart"
                            android:layout_alignRight="@id/ListView1"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"
                            android:layout_marginLeft="5dp" />

                    </RelativeLayout>


        </LinearLayout>

</RelativeLayout>
